{# -- Base HTML layout template that all HTML requests inherit from -- #}
{#
    ┌─────────────────────────────────────────────────────────────────────────────┐
    │ ┌─────────────────────────────────────────────────────────────────────────┐ │
    │ │                                headMeta                                 │ │
    │ └─────────────────────────────────────────────────────────────────────────┘ │
    │ ┌─────────────────────────────────────────────────────────────────────────┐ │
    │ │                                headLinks                                │ │
    │ └─────────────────────────────────────────────────────────────────────────┘ │
    │ ┌─────────────────────────────────────────────────────────────────────────┐ │
    │ │                                 headJs                                  │ │
    │ └─────────────────────────────────────────────────────────────────────────┘ │
    │ ┌─────────────────────────────────────────────────────────────────────────┐ │
    │ │                                 headCss                                 │ │
    │ └─────────────────────────────────────────────────────────────────────────┘ │
    │                                                                             │
    │                                 headContent                                 │
    └─────────────────────────────────────────────────────────────────────────────┘
    ┌─────────────────────────────────────────────────────────────────────────────┐
    │ ┌─────────────────────────────────────────────────────────────────────────┐ │
    │ │                                bodyHtml                                 │ │
    │ └─────────────────────────────────────────────────────────────────────────┘ │
    │ ┌─────────────────────────────────────────────────────────────────────────┐ │
    │ │                                 bodyJs                                  │ │
    │ └─────────────────────────────────────────────────────────────────────────┘ │
    │                                                                             │
    │                                 bodyContent                                 │
    └─────────────────────────────────────────────────────────────────────────────┘
#}
{% extends '_boilerplate/_layouts/global-variables.twig' %}

{%- block htmlPage -%}
    {% minify %}
    <!DOCTYPE html>
        {% block htmlTag %}
            <html lang="{{ craft.app.language |slice(0,2) }}">
        {% endblock htmlTag %}
        {% block headTag %}
            <head>
        {% endblock headTag %}
            {% include '_boilerplate/_partials/head-meta.twig' %}
            {# -- Page content that should be included in the <head> -- #}
            {% block headContent %}
            {% endblock headContent %}
            </head>

            {% block bodyTag %}
            <body>
            {% endblock bodyTag %}

                {# -- Page content that should be included in the <body> -- #}
                {% block bodyContent %}
                {% endblock bodyContent %}
            </body>
        </html>
    {% endminify %}
{%- endblock htmlPage -%}
