{%- extends '_atoms/texts/_text--props' -%}
{%- import '_macros/atomic' as atoms -%}


{#
    ### PROPERTIES ###
    ------------------

    INHERITED FROM: `_atoms/texts/text--props.twig`
#}

{%- block text -%}
    {%- set classes = collect({
        color: props.get('color') ??? 'text-black',
        font: 'font-primary',
        size: 'text-h1-sm md:text-h1-md lg:text-h1-lg',
        strong: '[&>strong]:text-red-500',
        utilities: props.get('utilities'),
    }) -%}

    {%- minify -%}
        <span class="{{ classes.implode(' ') }}">
            {{- props.get('content')|striptags('<strong>')|typogrify(true)|raw -}}
        </span>
    {%- endminify -%}
{%- endblock -%}